{
    "manifest_version": 3,
    "name": "Translator Extension",
    "description": "Translate text using this extension",
    "version": "1.0",
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    },
    "permissions": [
      "activeTab"
    ],
    "host_permissions": [
      "<all_urls>"
    ]
  }
  